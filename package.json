{
  "name": "volunteer-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "start:db": "docker compose --env-file .env.local up -d",
    "stop:db": "docker compose --env-file .env.local down",
    "connect:db": "docker compose --env-file .env.local exec db psql -U postgres",
    "logs:db": "docker compose --env-file .env.local logs -f db",
    "logs:liquibase": "docker compose --env-file .env.local logs -f liquibase",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/themes": "^3.2.1",
    "@tanstack/react-query": "^5.90.12",
    "next": "16.0.8",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@radix-ui/react-icons": "^1.3.2",
    "@tailwindcss/postcss": "^4",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/pg": "^8.15.6",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "better-auth": "^1.4.6",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "next-intl": "^4.5.8",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  }
}
